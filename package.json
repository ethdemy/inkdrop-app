{
    "name": "InkDrop",
    "version": "0.0.1",
    "devDependencies": {
        "openzeppelin-zos": "^1.9.4",
        "truffle": "^4.1.13",
        "truffle-contract": "^3.0.5",
        "truffle-hdwallet-provider": "0.0.5",
        "zos": "^1.4.1",
        "zos-lib": "^1.4.1"
    },
    "dependencies": {
        "bootstrap": "^4.1.2",
        "drizzle": "^1.2.2",
        "drizzle-react": "^1.1.1",
        "ipfs-api": "^22.2.3",
        "moment": "^2.22.2",
        "prettier": "^1.13.4",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-ga": "^2.5.3",
        "react-infinite-scroller": "^1.2.0",
        "react-linkify": "^0.2.2",
        "react-moment": "^0.7.0",
        "react-redux": "^5.0.2",
        "react-router": "^3.2.1",
        "react-router-redux": "^4.0.7",
        "react-scripts": "1.1.5",
        "reactstrap": "^6.4.0",
        "redux": "^3.6.0",
        "redux-auth-wrapper": "^1.0.0",
        "redux-saga": "^0.15.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "clean": "find . -name '.DS_Store' -delete",
        "compile": "npm run clean && truffle compile",
        "s3_upload": "aws s3 sync build_webpack/ s3://aws-website-inkdrop-beta-hn57w",
        "cdn_invalidation":
            "aws cloudfront create-invalidation --distribution-id EFXNQ7A2KLVQZ --paths '/*'",
        "deploy": "npm run s3_upload && npm run cdn_invalidation",
        "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
        "chain":
            "geth --datadir=\"/tmp/eth/60/01\" --nodiscover --maxpeers 0 --port 30301 --rpc --rpcapi \"db,eth,net,web3\" --rpcport 8101 --verbosity 6 console"
    },
    "jest": {
        "collectCoverageFrom": ["src/**/*.{js,jsx}"],
        "setupFiles": ["<rootDir>\\config\\polyfills.js"],
        "testPathIgnorePatterns": ["<rootDir>[/\\\\](build|docs|node_modules)[/\\\\]"],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>\\config\\jest\\cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>\\config\\jest\\fileTransform.js"
        },
        "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        }
    },
    "babel": {
        "presets": ["react-app"]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "prettier": {
        "tabWidth": 2,
        "useTabs": false,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": false,
        "jsxBracketSameLine": true
    }
}
